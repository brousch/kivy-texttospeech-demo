#:kivy 1.6.0
<TtsDemo>:
    orientation: 'vertical'
    saywhat_text: saywhat_text
    padding: root.width * 0.02, root.height * 0.02
    spacing: 10
    canvas:
        Rectangle:
            source: 'images/background.png'
            pos: self.pos
            size: self.size
    Label:
        text: 'Kivy TTS Demo'
        font_size: '45sp'
        size_hint: 1, None
    TextInput:
        id: saywhat_text
        text: 'Hello, world!'
        multiline: True
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        Button:
            text: 'Say it!'
            size_hint: 1, None
            on_press: root.say_something(saywhat_text.text)
        Button:
            text: 'Clear'
            size_hint: 1, None
            on_press: root.clear()